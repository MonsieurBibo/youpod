<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

<style> 
@import url('https://fonts.googleapis.com/css?family={{ font_url }}');


body{
	margin: 0px;  
  font-family: '{{ font }}', sans-serif;
  width: 100%; height: 100%;
}

h1 {
   width: 100%;
   font-size: 5vw;
  margin-top: 1vh;
   margin-bottom: 0;
   margin-left: 1vw;
   margin-right: 1vw;
   }

h2 {
    width: 100%;
    font-size: 4vw;
   font-weight: 400;
   margin-bottom: 0;
   margin-left: 1vw;
   margin-right: 1vw;
    }
h3 {
	width: 100%;
    font-size: 3vw;
    font-weight: 400;
    margin-left: 1vw;
    margin-right: 1vw;
    margin-bottom: 1.5vh;
}
           

 img {
     max-width: 100%;
 	}

.wrapper {    
	position:relative; 
	width: 100%; 
	min-height:100vh;
	overflow: hidden;
	display: flex;
	flex-direction: column;
}


.blur{
	position: fixed;
  background: url({{{ imageURL }}});
	background-position: bottom;
	background-size: cover;
  	bottom: 0; right: 0px; 
  	width: 100%; 
  	height: 100vh;
  	z-index:-1;
  	filter: blur(20px);
  	transform: scale(1.2);
  	margin-top: -1vh;
}
            


.cover{
  margin: 5vh;
  background: url({{{ imageURL }}});
  background-repeat: no-repeat;
	flex-grow: 1;
  background-size: contain;
  background-position: center;

}
      
.tags {
   display: flex;
   flex-direction: column;
   justify-content: space-evenly;
   padding-top: 0;
   padding-bottom: 5vh;
   padding-left: 3vh;
  padding-right: 3vh;

	}

.text{
    word-wrap: normal;
    color: white;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.50); 
	}

</style>
</head>
<body>
<div class="blur"></div>

<div class="wrapper">
		<div class="cover"></div>
   		<div class="tags">
         	<h1 class="text">{{{ epTitle }}}</h1>
       		<h2 class="text">{{{ podTitle }}}</h2>
    	</div>
</div>

</body>

</html>
